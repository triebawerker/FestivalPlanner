<% include ../partials/head %>
<% include ../partials/header %>

	<div class="content">
			<div>
					<form name="band" method="post" action="/admin/bands/update/<%= band.id %>">
							<fieldset>
									<label>Name</label>
									<input type="text" name="name" value="<%= band.name %>">
									<label>ImageUrl</label>
									<input type="text" name="imageUrl" value="<%= band.imageUrl %>">
									<textarea name="description" rows="8" cols="80"><%= band.description %></textarea>
							</fieldset>
									<input type="submit" value="Save">
					</form>
			</div>
	</div>

<% include ../partials/footer %>
